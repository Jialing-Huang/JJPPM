@page
@model JJPPM.Pages.TaskUpdateModel
@{
}

<h1>Update task</h1>
<form method="post">
  <div class="form-group">
    <label asp-for="Description"></label>
    <textarea asp-for="Description" class="form-control form-control-sm" value=@Model.Description></textarea>
    <span asp-validation-for="Description"></span>
  </div>

  <div class="form-group">
    <label asp-for="DueDate"></label>
    <input asp-for="DueDate" class="form-control form-control-sm" type="datetime-local"/>             
    <span asp-validation-for="DueDate"></span>
  </div>

  <div class="form-group">
    @* <label asp-for="TaskStatusId">Current status is @Model.TaskCurrentStatus, Please select a task status</label> *@
    <label asp-for="TaskStatusId">Please select a task status</label>
    <select name="TaskStatusId" asp-items="Model.TaskStatusOptions" class="form-control form-control-sm"></select>
    <span asp-validation-for="TaskStatusId"></span>
  </div>

  <div class="form-group">
    @* <label asp-for="TaskPriorityId">Current Priority is @Model.TaskCurrentPriority, Please select a task Priority</label> *@
    <label asp-for="TaskPriorityId">Please select a task Priority</label>
    <select name="TaskPriorityId" asp-items="Model.TaskPriorityOptions" class="form-control form-control-sm"></select>
    <span asp-validation-for="TaskPriorityId"></span>
  </div>

  <p class="actions d-flex">
    <input class="btn btn-primary order-button" type="submit" value="UPDATE"/>
    <input class="btn btn-outline-danger ml-2" type="reset" value="RESET"/>
    <a class="btn btn-outline-secondary ml-auto" asp-page="ProjectBoard" asp-route-id="@Model.ProjectId">BACK TO PROJECT BOARD</a>

  </p>
</form>
@section scripts{
<partial name="_ValidationScriptsPartial"></partial>
}