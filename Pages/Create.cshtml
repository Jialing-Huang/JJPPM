<h1>Add a new project</h1>
<form method="post">
  <div class="form-group">
    <label asp-for="ProjectName"></label>
    <input asp-for="ProjectName" class="form-control form-control-sm" />                
    <span asp-validation-for="ProjectName"></span>
  </div>

  <div class="form-group">
    <label asp-for="Description"></label>
    <input asp-for="Description" class="form-control form-control-sm" />                
    <span asp-validation-for="Description"></span>
  </div>

   <div class="form-group">
    <label asp-for="StartDate"></label>
    <input asp-for="StartDate" class="form-control form-control-sm" />                
    <span asp-validation-for="StartDate"></span>
  </div>

  <div class="form-group">
    <label asp-for="DueDate"></label>
    <textarea asp-for="DueDate" class="form-control form-control-sm"></textarea>              
    <span asp-validation-for="DueDate"></span>
  </div>
  
  <p class="actions">
    @* <input type="hidden" asp-for=".Id" /> *@
    <button class="btn btn-primary order-button">Add</button>
  </p>
